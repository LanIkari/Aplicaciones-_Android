<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lytContenedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        <TextView
            android:id="@+id/lblMontoCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/montoCompra" />

        <EditText
            android:id="@+id/montoCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"/>

    <Button
        android:id="@+id/btnCalcularDescuento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="calcular_descuento2"
        android:text="@string/calcularDescuento" />

        <TextView
            android:id="@+id/montoC2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/descuento2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/costoNeto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/impuesto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/importeNeto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>